<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> o todo foi proibido de ser salvo:</h2>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :titulo, 'Título' %>:
    <%= form.text_field :titulo, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :descricao, 'Descrição' %>:
    <%= form.text_area :descricao, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :concluido, 'Concluído' %>:
    <%= form.check_box :concluido, class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvar', :class => 'btn btn-primary' %>
  </div>
<% end %>
